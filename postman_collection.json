{
    "info": {
        "_postman_id": "bloodbd-api-collection",
        "name": "BloodBD API Collection",
        "description": "Complete API collection for BloodBD application including Authentication and Location services.",
        "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
    },
    "item": [
        {
            "name": "Authentication",
            "item": [
                {
                    "name": "Register",
                    "request": {
                        "method": "POST",
                        "header": [
                            {
                                "key": "Content-Type",
                                "value": "application/json"
                            },
                            {
                                "key": "Accept",
                                "value": "application/json"
                            }
                        ],
                        "body": {
                            "mode": "raw",
                            "raw": "{\n    \"name\": \"John Doe\",\n    \"email\": \"john.doe@example.com\",\n    \"username\": \"johndoe123\",\n    \"mobile\": \"01712345678\",\n    \"password\": \"password123\",\n    \"password_confirmation\": \"password123\",\n    \"dob\": \"1990-01-01\",\n    \"blood_group\": \"A+\",\n    \"occupation\": \"Software Engineer\",\n    \"is_weight_50kg\": true,\n    \"last_donation\": \"2024-01-15\",\n    \"division_id\": 1,\n    \"district_id\": 1,\n    \"area_id\": 1,\n    \"post_office\": \"Dhaka-1000\"\n}"
                        },
                        "url": {
                            "raw": "{{baseUrl}}/api/auth/register",
                            "host": [
                                "{{baseUrl}}"
                            ],
                            "path": [
                                "api",
                                "auth",
                                "register"
                            ]
                        },
                        "description": "Register a new user account with complete profile information."
                    },
                    "response": []
                },
                {
                    "name": "Login",
                    "event": [
                        {
                            "listen": "test",
                            "script": {
                                "exec": [
                                    "if (pm.response.code === 200) {",
                                    "    var jsonData = pm.response.json();",
                                    "    pm.collectionVariables.set(\"authToken\", jsonData.data.token);",
                                    "}"
                                ],
                                "type": "text/javascript"
                            }
                        }
                    ],
                    "request": {
                        "method": "POST",
                        "header": [
                            {
                                "key": "Content-Type",
                                "value": "application/json"
                            },
                            {
                                "key": "Accept",
                                "value": "application/json"
                            }
                        ],
                        "body": {
                            "mode": "raw",
                            "raw": "{\n    \"email_or_mobile\": \"john.doe@example.com\",\n    \"password\": \"password123\"\n}"
                        },
                        "url": {
                            "raw": "{{baseUrl}}/api/auth/login",
                            "host": [
                                "{{baseUrl}}"
                            ],
                            "path": [
                                "api",
                                "auth",
                                "login"
                            ]
                        },
                        "description": "Login with email OR mobile and password. The token is automatically saved to collection variables."
                    },
                    "response": []
                },
                {
                    "name": "Get User",
                    "request": {
                        "auth": {
                            "type": "bearer",
                            "bearer": [
                                {
                                    "key": "token",
                                    "value": "{{authToken}}",
                                    "type": "string"
                                }
                            ]
                        },
                        "method": "GET",
                        "header": [
                            {
                                "key": "Accept",
                                "value": "application/json"
                            }
                        ],
                        "url": {
                            "raw": "{{baseUrl}}/api/auth/user",
                            "host": [
                                "{{baseUrl}}"
                            ],
                            "path": [
                                "api",
                                "auth",
                                "user"
                            ]
                        },
                        "description": "Get details of the currently authenticated user."
                    },
                    "response": []
                },
                {
                    "name": "Logout",
                    "request": {
                        "auth": {
                            "type": "bearer",
                            "bearer": [
                                {
                                    "key": "token",
                                    "value": "{{authToken}}",
                                    "type": "string"
                                }
                            ]
                        },
                        "method": "POST",
                        "header": [
                            {
                                "key": "Accept",
                                "value": "application/json"
                            }
                        ],
                        "url": {
                            "raw": "{{baseUrl}}/api/auth/logout",
                            "host": [
                                "{{baseUrl}}"
                            ],
                            "path": [
                                "api",
                                "auth",
                                "logout"
                            ]
                        },
                        "description": "Logout and revoke current access token."
                    },
                    "response": []
                },
                {
                    "name": "Revoke All Tokens",
                    "request": {
                        "auth": {
                            "type": "bearer",
                            "bearer": [
                                {
                                    "key": "token",
                                    "value": "{{authToken}}",
                                    "type": "string"
                                }
                            ]
                        },
                        "method": "POST",
                        "header": [
                            {
                                "key": "Accept",
                                "value": "application/json"
                            }
                        ],
                        "url": {
                            "raw": "{{baseUrl}}/api/auth/revoke-all",
                            "host": [
                                "{{baseUrl}}"
                            ],
                            "path": [
                                "api",
                                "auth",
                                "revoke-all"
                            ]
                        },
                        "description": "Revoke all tokens for the authenticated user."
                    },
                    "response": []
                }
            ],
            "description": "Authentication endpoints for user registration, login, and token management."
        },
        {
            "name": "Locations",
            "item": [
                {
                    "name": "Get Divisions",
                    "request": {
                        "method": "GET",
                        "header": [
                            {
                                "key": "Accept",
                                "value": "application/json"
                            }
                        ],
                        "url": {
                            "raw": "{{baseUrl}}/api/locations/divisions",
                            "host": [
                                "{{baseUrl}}"
                            ],
                            "path": [
                                "api",
                                "locations",
                                "divisions"
                            ]
                        },
                        "description": "Get all divisions."
                    },
                    "response": []
                },
                {
                    "name": "Get Districts",
                    "request": {
                        "method": "GET",
                        "header": [
                            {
                                "key": "Accept",
                                "value": "application/json"
                            }
                        ],
                        "url": {
                            "raw": "{{baseUrl}}/api/locations/districts/:divisionId",
                            "host": [
                                "{{baseUrl}}"
                            ],
                            "path": [
                                "api",
                                "locations",
                                "districts",
                                ":divisionId"
                            ],
                            "variable": [
                                {
                                    "key": "divisionId",
                                    "value": "1",
                                    "description": "ID of the division"
                                }
                            ]
                        },
                        "description": "Get districts by division ID."
                    },
                    "response": []
                },
                {
                    "name": "Get Areas",
                    "request": {
                        "method": "GET",
                        "header": [
                            {
                                "key": "Accept",
                                "value": "application/json"
                            }
                        ],
                        "url": {
                            "raw": "{{baseUrl}}/api/locations/areas/:districtId",
                            "host": [
                                "{{baseUrl}}"
                            ],
                            "path": [
                                "api",
                                "locations",
                                "areas",
                                ":districtId"
                            ],
                            "variable": [
                                {
                                    "key": "districtId",
                                    "value": "1",
                                    "description": "ID of the district"
                                }
                            ]
                        },
                        "description": "Get areas (upazilas/thanas) by district ID."
                    },
                    "response": []
                },
                {
                    "name": "Get Unions",
                    "request": {
                        "method": "GET",
                        "header": [
                            {
                                "key": "Accept",
                                "value": "application/json"
                            }
                        ],
                        "url": {
                            "raw": "{{baseUrl}}/api/locations/unions/:areaId",
                            "host": [
                                "{{baseUrl}}"
                            ],
                            "path": [
                                "api",
                                "locations",
                                "unions",
                                ":areaId"
                            ],
                            "variable": [
                                {
                                    "key": "areaId",
                                    "value": "1",
                                    "description": "ID of the area"
                                }
                            ]
                        },
                        "description": "Get unions by area ID."
                    },
                    "response": []
                }
            ],
            "description": "Public endpoints for retrieving location data (divisions, districts, areas, unions)."
        }
    ],
    "variable": [
        {
            "key": "baseUrl",
            "value": "http://localhost",
            "type": "string"
        },
        {
            "key": "authToken",
            "value": "",
            "type": "string"
        }
    ]
}
